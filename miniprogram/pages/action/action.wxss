.alll{
  margin: 0;
  padding: 0;
  background-color: #f0f0f0;
  height: 1000rpx;
}

.app-title{
 font-size: 50rpx;
 /* font-weight: bold; */
 color: black;
 font-family: 'STXinwei';
 border-left:10rpx solid #4ec4c8;
 margin-left: 20rpx;
 margin-top: 20rpx;
 text-indent: 15rpx;
}

.mod-item{
 width:46%;
 height:220rpx;
 float: left;
 margin-left:20rpx;
 margin-top:40rpx;
 position: relative;
}
.mod-signup{
  position: absolute;
}
.mod-signup image{
  width:76rpx;
  height:42rpx;
}
.mod-img{
  width:100%;
  height:180rpx;
  
} 
.mod-image{
  width: 100%;
  height:180rpx;
  border-radius: 15rpx;
  /* box-shadow: 8rpx 8rpx 8rpx 4rpx #dfd7d7 */
}
.mod-title{
  font-size:40rpx;
  /* font-weight: bold; */
  color: #5b5b5b;

  font-family: 'STXinwei';
  display:flex;
  height:45rpx;
  margin-top:15rpx;
  flex-direction:column;
  justify-content: center;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  overflow: hidden;
}
.mod-info{
  display: flex;
  flex-direction: column;
  height:40rpx;
}
.mod-icon{
  display: flex;
  flex-direction: row;
  width: 40rpx;
  height: 40rpx;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}
.moinfont{
  font-size: 28rpx;
  text-indent: 60rpx;
  font-family: '微软雅黑';
  color:#bfbfbf;
}
.more{
  width:100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  border-top:1rpx solid #eeeeee;
  position: relative;
}
.more-info{
  display: flex;
  flex-direction: column;
  font-size:32rpx;
  font-family: '微软雅黑';
  line-height: 98rpx;
  text-indent: 30rpx;
  color:#586C94;
}
.icon-jt{
  position: absolute;
  width:60rpx;
  height:60rpx;
  right:0rpx;
  top:18rpx;
}
.iconjtimg{
  width:60rpx;
  height:60rpx;
}
.clear{
  display: flex;
  flex-direction: column;
  height:10rpx;
  background: #eeeeee;
}
